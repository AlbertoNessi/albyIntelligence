<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Alby Intelligence{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha256-PI8n5gCcz9cQqQXm3PEtDuPG8qx9oFsFctPg0S5zb8g=" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body class="bg-primary-subtle">
        {% block navbar %}
            <div class="d-flex justify-content-center py-3">
                <h1 class="text-2xl text-center">Alby Intelligence!</h1>
            </div>
            <div class="text-center">
                <h6>A simple project to mimic Apple Intelligence with Symfony + ChatGPT API</h6>
            </div>
            <header class="text-center flex justify-around my-4">
                <a class="btn btn-primary" href="{{ path('list_url', {id: 1}) }}" role="button" aria-current="page">Home</a>
                <a class="btn btn-primary" href="{{ path('list_url', {id: 2}) }}" role="button" aria-current="page">Contatti</a>
                <a class="btn btn-primary" href="{{ path('list_url', {id: 3}) }}" role="button" aria-current="page">Email</a>
                <a class="btn btn-primary" href="{{ path('list_url', {id: 4}) }}" role="button" aria-current="page">Messaggi</a>
                <a class="btn btn-primary" href="{{ path('list_url', {id: 5}) }}" role="button" aria-current="page">Note</a>
                <a class="btn btn-primary" href="{{ path('list_url', {id: 6}) }}" role="button" aria-current="page">Promemoria</a>
            </header>
        {% endblock %}

        {% block body %}{% endblock %}
        {% block footer %}
            <div class="container">
                <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                    <div class="col-md-4 d-flex align-items-center">
                        <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                            <svg class="bi" width="30" height="24"><use xlink:href="#bootstrap"></use></svg>
                        </a>
                        <span class="mb-3 mb-md-0 text-body-secondary">© 2024 Company, Inc</span>
                    </div>

                    <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
                        <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
                        <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
                        <li class="ms-3"><a class="text-body-secondary" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
                    </ul>
                </footer>
            </div>
        {% endblock %}
    {% block js %}{% endblock %}
    </body>
</html>
