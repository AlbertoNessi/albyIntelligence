{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8 px-md-4">
                <form>
                    <div class="row">
                        <div class="form-floating mx-auto p-2">
                            <textarea class="form-control" placeholder="Chiedi quello che vuoi" id="userMessage"></textarea>
                            <label for="userMessage">How can I help you?</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-end">
                            <button type="submit" class="btn btn-dark" id="sendUserMessageBtn">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        $('#sendUserMessageBtn').on('click', function(event) {
            event.preventDefault();
            var message = $('#userMessage').val();

            $.ajax({
                url: '{{ path('chatgpt_request_url') }}',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ messages: [{ role: 'user', content: message }] }),
                success: function(response) {
                    showAlert('Success! Response received: ' + response.content, 'success');
                },
                error: function(xhr, status, error) {
                    showAlert('Error! Failed to send data.', 'danger');
                },
                complete: function() {
                    // Clear the textarea after request completion
                    $('#userMessage').val('');
                }
            });
        });
    </script>
{% endblock %}

